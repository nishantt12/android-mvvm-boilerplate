<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/pink_dark"
    android:layout_height="wrap_content"
   android:id="@+id/main_layout"
    android:layout_margin="@dimen/margin_16"
    android:padding="@dimen/margin_16"
    android:orientation="vertical">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/img_catalog"
        />

    <TextView
        style="@style/TextCatalog"
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_catalog"
        app:layout_constraintTop_toTopOf="@+id/img_catalog"
        android:layout_marginLeft="@dimen/margin_16"
        tools:text="Slim fit Jeans"
        />

    <TextView
        style="@style/TextCatalog"
        android:id="@+id/tv_price"
        android:layout_marginTop="@dimen/margin_5"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        tools:text="400 USD"
        />

    <TextView
        style="@style/TextCatalog"
        android:id="@+id/tv_price_original"
        android:layout_marginTop="@dimen/margin_5"
        app:layout_constraintTop_toBottomOf="@+id/tv_price"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        tools:text="400 USD"
        />

    <TextView
        style="@style/TextCatalog"
        android:id="@+id/tv_brand"
        android:layout_marginTop="@dimen/margin_5"
        app:layout_constraintTop_toBottomOf="@+id/tv_price_original"
        app:layout_constraintLeft_toLeftOf="@+id/tv_price_original"
        tools:text="JAXON"
        />

</androidx.constraintlayout.widget.ConstraintLayout>